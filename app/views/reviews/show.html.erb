<h1>Author: <%= @review.author %></h1>
<h2>Product: <%= @product.name %></h2>
<h3>Rating: <%= @review.rating %></h3>
<h3>Review: <%= @review.content_body %></h3><br>
<p><%= link_to "Return to product", product_path(@product) %></p><br><br>
<% if current_user && current_user.admin %>
  <h2 class="admin">Admin only</h2>
  <ul>
    <li><%= link_to "Edit review", edit_product_review_path(@product, @review) %></li>
    <li><%= link_to "Delete review", product_review_path(@product, @review),
                            :data => {:confirm => "Are you sure?",
                                          :method => "delete"} %></li>
  </ul>
<% end %>